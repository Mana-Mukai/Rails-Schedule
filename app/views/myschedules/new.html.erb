<h2>スケジュール新規作成</h2>

<%= render "shared/error", obj: @myschedule %>

<%= form_for @myschedule do |f| %>
    <table>
       <tr>
            <th><%= f.label :title ,"タイトル" %></th>
            <td><%= f.text_field :title %></td>
        </tr>
        <tr>
            <th><%= f.label :starttime ,"開始時間" %></th>
            <td><%= f.text_field :starttime %></td>
        </tr>
        <tr>
            <th><%= f.label :endingtime ,"終了時間" %></th>
            <td><%= f.text_field :endingtime %></td>
        </tr>
        <tr>
            <th><%= f.label :detail ,"メモ" %></th>
            <td><%= f.text_area :detail %></td>
        </tr>
    </table>
    <div>
        <ul>
            <li><%= f.submit "登録完了する"%></li>
            <li><%= link_to "スケジュール情報一覧に戻る", :myschedules %></li>
        </ul>
    </div>
<% end %>